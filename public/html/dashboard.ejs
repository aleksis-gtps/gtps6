<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
  <title>GTPS6 Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: #00e0ff;
      --secondary-color: #00b8ff;
      --discord-color: #5865F2;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background: rgba(5, 10, 20, 0.7);
      min-height: 100vh;
    }
    
    .title-font {
      font-family: 'Orbitron', sans-serif;
    }

    .neon-title {
      font-size: 1.2rem;
      background: linear-gradient(90deg, var(--primary-color), #ffffff, var(--primary-color));
      background-size: 300%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: glowMove 4s linear infinite;
      text-shadow:
        0 0 5px rgba(0, 246, 255, 0.7),
        0 0 10px rgba(0, 224, 255, 0.5),
        0 0 20px rgba(0, 224, 255, 0.3);
    }

    @keyframes glowMove {
      0% { background-position: 0%; }
      100% { background-position: 300%; }
    }

    /* Glass effect with full shine animation */
    .glass-box {
      border: 1px solid rgba(255, 255, 255, 0.1);
      background: rgba(0, 0, 0, 0.3);
      box-shadow: 0 0 25px rgba(0, 255, 255, 0.2);
      backdrop-filter: blur(12px);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      width: 90%;
      max-width: 320px;
    }
    
    .glass-box::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(
        to bottom right,
        rgba(0, 224, 255, 0) 0%,
        rgba(0, 224, 255, 0) 30%,
        rgba(0, 224, 255, 0.1) 45%,
        rgba(0, 224, 255, 0) 60%,
        rgba(0, 224, 255, 0) 100%
      );
      transform: rotate(30deg);
      animation: shine 6s infinite;
      z-index: -1;
    }
    
    @keyframes shine {
      0% { transform: translateX(-100%) rotate(30deg); }
      100% { transform: translateX(100%) rotate(30deg); }
    }
    
    /* Input field focus effect */
    .input-field:focus-within {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 2px rgba(0, 224, 255, 0.2);
    }
    
    /* Button hover effect */
    .btn-primary {
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }
    
    .btn-primary::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: all 0.5s ease;
    }
    
    .btn-primary:hover::after {
      left: 100%;
    }
    
    /* Error message animation */
    .error-message {
      animation: shake 0.5s ease-in-out;
    }
    
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      20%, 60% { transform: translateX(-5px); }
      40%, 80% { transform: translateX(5px); }
    }
    
    /* Mobile responsive adjustments */
    @media (max-width: 640px) {
      .glass-box {
        width: 95%;
        padding: 1.5rem;
      }
      
      .neon-title {
        font-size: 1rem;
      }
      
      .logo-img {
        width: 100px !important;
      }
      
      .btn-primary {
        padding: 0.5rem;
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center text-white px-4 relative">

  <!-- Login Panel -->
  <div class="glass-box rounded-lg p-4 space-y-3 z-10">
    <!-- Logo + Title -->
    <div class="flex flex-col items-center space-y-2 mb-3">
      <img src="https://media.discordapp.net/attachments/1356768818289971397/1356769300924596426/logo.png?ex=67f8fa20&amp;is=67f7a8a0&amp;hm=d517aee77d475a1ae0af4c66a4cd31bb34ea83947c71160dcf139b3c862deb98&amp;format=webp&amp;quality=lossless" 
           alt="GTPS6 Logo" 
           class="logo-img object-contain drop-shadow-md hover:scale-105 transition-transform duration-300" />
      <h1 class="title-font neon-title text-center">PLAYER LOGIN</h1>
    </div>

    <!-- Error Message -->
    <div id="errorDiv" class="hidden bg-red-900/70 text-red-100 text-xs px-3 py-2 rounded border border-red-700/50 mb-2">
      <div class="flex items-center">
        <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
        <p id="errorMessage" class="font-medium"></p>
      </div>
    </div>

    <!-- Login Form -->
    <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm" class="space-y-3">
      <input type="hidden" name="type" value="log" />
      <input type="hidden" name="_token" value="<%= JSON.stringify(data) %>" />

      <!-- GrowID -->
      <div class="space-y-1">
        <label for="loginGrowId" class="block text-cyan-100">GrowID</label>
        <div class="flex items-center input-field bg-white/5 border border-white/10 rounded focus-within:bg-white/10 transition-all duration-200">
          <i class="fas fa-user text-xs mr-1 text-cyan-300"></i>
          <input type="text" name="growId" id="loginGrowId" placeholder="Enter your GrowID"
                 class="bg-transparent w-full outline-none placeholder-cyan-200/50 focus:placeholder-transparent"/>
        </div>
      </div>

      <!-- Password -->
      <div class="space-y-1">
        <label for="loginPassword" class="block text-cyan-100">Password</label>
        <div class="flex items-center input-field bg-white/5 border border-white/10 rounded focus-within:bg-white/10 transition-all duration-200">
          <i class="fas fa-lock text-xs mr-1 text-cyan-300"></i>
          <input type="password" name="password" id="loginPassword" placeholder="Enter your password"
                 class="bg-transparent w-full outline-none placeholder-cyan-200/50 focus:placeholder-transparent"/>
          <button type="button" id="toggleLogPassword" class="ml-1 text-xs text-cyan-300 hover:text-white transition">
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>

      <!-- Remember Me -->
      <div class="flex items-center justify-between mt-2">
        <div class="flex items-center">
          <input type="checkbox" id="rememberMe" class="h-3 w-3 rounded border-gray-300 text-cyan-500 focus:ring-cyan-500 bg-white/10">
          <label for="rememberMe" class="ml-1 block text-xs text-cyan-100">Remember me</label>
        </div>
        <a href="/forgot-password" class="text-xs text-cyan-300 hover:text-white underline underline-offset-1">Forgot password?</a>
      </div>

      <!-- Buttons with Full Effects -->
      <div class="flex flex-col space-y-2 mt-3">
        <button id="loginButton" class="btn-primary flex items-center justify-center gap-1 w-full bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white rounded shadow-lg hover:shadow-cyan-500/30 transition-all duration-300">
          <i class="fas fa-sign-in-alt text-xs"></i> <span class="title-font">LOGIN</span>
        </button>

        <div class="flex items-center my-1">
          <div class="flex-1 border-t border-gray-600/50"></div>
          <span class="px-2 text-xs text-gray-400">OR</span>
          <div class="flex-1 border-t border-gray-600/50"></div>
        </div>

        <a href="/register" class="btn-primary flex items-center justify-center gap-1 w-full bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700 text-white rounded shadow-lg hover:shadow-purple-500/30 transition-all duration-300">
          <i class="fas fa-user-plus text-xs"></i> <span class="title-font">REGISTER</span>
        </a>

        <a href="https://discord.gg/YOUR_SERVER" target="_blank"
           class="btn-primary flex items-center justify-center gap-1 w-full bg-[var(--discord-color)] hover:bg-[#4752c4] text-white rounded shadow-lg hover:shadow-indigo-500/30 transition-all duration-300">
          <i class="fab fa-discord text-sm"></i> <span class="title-font">DISCORD</span>
        </a>
      </div>
    </form>
    
    <!-- Footer -->
    <div class="text-center text-2xs text-gray-400 mt-3">
      <p>Â© 2023 GTPS6</p>
    </div>
  </div>

  <script>
    // Save user info
    document.addEventListener('DOMContentLoaded', function () {
      const rememberMe = localStorage.getItem('rememberMe') === 'true';
      document.getElementById('rememberMe').checked = rememberMe;
      
      if (rememberMe) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId') || '';
        document.getElementById('loginPassword').value = localStorage.getItem('password') || '';
      }
      
      // Add focus effects to inputs
      const inputs = document.querySelectorAll('input[type="text"], input[type="password"]');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('ring-2', 'ring-cyan-500/30');
        });
        input.addEventListener('blur', function() {
          this.parentElement.classList.remove('ring-2', 'ring-cyan-500/30');
        });
      });
    });

    // Toggle password visibility
    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const passwordField = document.getElementById('loginPassword');
      const type = passwordField.getAttribute('type');
      passwordField.setAttribute('type', type === 'password' ? 'text' : 'password');
      this.innerHTML = `<i class="fas fa-${type === 'password' ? 'eye-slash' : 'eye'}"></i>`;
      passwordField.focus();
    });

    // Form validation
    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const uName = document.getElementById('loginGrowId').value.trim();
      const uPass = document.getElementById('loginPassword').value.trim();
      const rememberMe = document.getElementById('rememberMe').checked;

      if (!uName || !uPass) {
        showError('Username and password required');
        return;
      }
      
      if (uName.length < 3 || uPass.length < 4) {
        showError('Min 3 chars for ID, 4 for password');
        return;
      }

      if (rememberMe) {
        localStorage.setItem('growId', uName);
        localStorage.setItem('password', uPass);
        localStorage.setItem('rememberMe', 'true');
      } else {
        localStorage.removeItem('growId');
        localStorage.removeItem('password');
        localStorage.setItem('rememberMe', 'false');
      }
      
      // Add loading state
      this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging in...';
      this.disabled = true;
      
      setTimeout(() => {
        document.getElementById('loginForm').submit();
      }, 800);
    });

    function showError(message) {
      const errorDiv = document.getElementById('errorDiv');
      document.getElementById('errorMessage').textContent = message;
      errorDiv.classList.remove('hidden');
      errorDiv.classList.add('error-message');
      
      setTimeout(() => {
        errorDiv.classList.remove('error-message');
      }, 500);
      
      setTimeout(() => {
        errorDiv.classList.add('hidden');
      }, 3000);
    }
    
    // Add enter key submission
    document.getElementById('loginPassword').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        document.getElementById('loginButton').click();
      }
    });
  </script>
</body>
</html>
