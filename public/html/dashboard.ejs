<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>GTPS6 Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Orbitron', sans-serif;
      overflow: hidden;
    }

    .neon-title {
      font-size: 2rem;
      background: linear-gradient(90deg, #00e0ff, #ffffff, #00e0ff);
      background-size: 300%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: glowMove 4s linear infinite;
      text-shadow:
        0 0 5px #00f6ff,
        0 0 10px #00e0ff,
        0 0 20px #00e0ff,
        0 0 30px #00e0ff;
    }

    @keyframes glowMove {
      0% { background-position: 0%; }
      100% { background-position: 300%; }
    }

    .glass-box {
      border: 2px solid rgba(255, 255, 255, 0.2);
      background: rgba(255, 255, 255, 0.05);
      box-shadow: 0 0 25px rgba(0, 255, 255, 0.15);
      backdrop-filter: blur(12px);
    }

    /* Particle background */
    .particles {
      position: fixed;
      width: 100%;
      height: 100%;
      z-index: 0;
      pointer-events: none;
      overflow: hidden;
    }

    .particle {
      position: absolute;
      width: 6px;
      height: 6px;
      background: #00e0ff;
      border-radius: 50%;
      opacity: 0.6;
      animation: floatParticle linear infinite;
    }

    @keyframes floatParticle {
      from {
        transform: translateY(100vh) scale(0.5);
        opacity: 0;
      }
      to {
        transform: translateY(-10vh) scale(1);
        opacity: 0.8;
      }
    }
  </style>
</head>
<body class="bg-gradient-to-br from-[#0f2027] via-[#203a43] to-[#2c5364] min-h-screen flex items-center justify-center text-white px-4 relative">

  <!-- Particle Layer -->
  <div class="particles" id="particles-container"></div>

  <!-- Login Panel -->
  <div class="relative glass-box rounded-2xl p-8 w-full max-w-sm space-y-6 z-10">

    <!-- Logo + Title -->
    <div class="flex flex-col items-center space-y-3">
      <img src="logo.png" alt="GTPS6 Logo" class="w-16 h-16 object-contain drop-shadow-md" />
      <h1 class="neon-title uppercase font-bold tracking-wider text-center">GTPS-6 Login Panel</h1>
    </div>

    <!-- Error Message -->
    <div id="errorDiv" class="hidden bg-red-100 text-red-800 text-sm px-4 py-2 rounded">
      <p id="errorMessage"></p>
    </div>

    <!-- Login Form -->
    <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm" class="space-y-4">
      <input type="hidden" name="type" value="log" />
      <input type="hidden" name="_token" value="<%= JSON.stringify(data) %>" />

      <!-- GrowID -->
      <div>
        <label for="loginGrowId" class="block text-sm mb-1">GrowID</label>
        <div class="flex items-center bg-white/10 border border-white/20 rounded px-3 py-2">
          <i class="fas fa-user text-sm mr-2"></i>
          <input type="text" name="growId" id="loginGrowId" placeholder="Enter your GrowID"
                 class="bg-transparent w-full outline-none placeholder-white text-sm"/>
        </div>
      </div>

      <!-- Password -->
      <div>
        <label for="loginPassword" class="block text-sm mb-1">Password</label>
        <div class="flex items-center bg-white/10 border border-white/20 rounded px-3 py-2">
          <i class="fas fa-lock text-sm mr-2"></i>
          <input type="password" name="password" id="loginPassword" placeholder="Enter your password"
                 class="bg-transparent w-full outline-none placeholder-white text-sm"/>
          <button type="button" id="toggleLogPassword" class="ml-2 text-sm text-white/80 hover:text-white transition">
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex flex-col space-y-2 mt-4">
        <button id="loginButton" class="flex items-center justify-center gap-2 w-full bg-[#00b8ff] hover:bg-[#06a4dd] text-white text-sm py-2 rounded-lg transition duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <i class="fas fa-sign-in-alt"></i> Login
        </button>

        <a href="/register" class="flex items-center justify-center gap-2 w-full bg-[#00b8ff] hover:bg-[#06a4dd] text-white text-sm py-2 rounded-lg transition duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <i class="fas fa-user-plus"></i> Register
        </a>

        <a href="https://discord.gg/YOUR_SERVER" target="_blank"
           class="flex items-center justify-center gap-2 w-full bg-[#5865F2] hover:bg-[#4752c4] text-white text-sm py-2 rounded-lg transition duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]">
          <i class="fab fa-discord text-lg"></i> GTPS-6 Discord
        </a>
      </div>
    </form>
  </div>

  <script>
    // Save user info
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
      if (localStorage.getItem('password')) {
        document.getElementById('loginPassword').value = localStorage.getItem('password');
      }

      // Generate particles
      const particleContainer = document.getElementById('particles-container');
      for (let i = 0; i < 60; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.animationDuration = `${6 + Math.random() * 10}s`;
        particle.style.animationDelay = `${Math.random() * 10}s`;
        particleContainer.appendChild(particle);
      }
    });

    // Toggle password visibility
    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const passwordField = document.getElementById('loginPassword');
      const type = passwordField.getAttribute('type');
      passwordField.setAttribute('type', type === 'password' ? 'text' : 'password');
      this.innerHTML = `<i class="fas fa-${type === 'password' ? 'eye-slash' : 'eye'}"></i>`;
    });

    // Form validation
    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const uName = document.getElementById('loginGrowId').value.trim();
      const uPass = document.getElementById('loginPassword').value.trim();

      if (!uName || !uPass) return showError('Username or Password is empty');
      if (uName.length < 2 || uPass.length < 4) return showError('Minimum 4 characters required');

      localStorage.setItem('growId', uName);
      localStorage.setItem('password', uPass);
      document.getElementById('loginForm').submit();
    });

    function showError(message) {
      const errorDiv = document.getElementById('errorDiv');
      document.getElementById('errorMessage').textContent = message;
      errorDiv.classList.remove('hidden');
    }
  </script>
</body>
</html>
