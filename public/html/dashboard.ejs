<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #1a1a2e; /* Dark, simple background */
      color: #e0e0e0; /* Light gray text */
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }

    .login-container {
      background-color: rgba(30, 30, 50, 0.8); /* Slightly darker, translucent box */
      border-radius: 12px;
      padding: 2.5rem;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
      max-width: 400px;
      width: 90%;
      text-align: center;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px); /* Clean glass effect */
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .input-group {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .input-field {
      width: 100%;
      padding: 0.75rem 1rem;
      padding-left: 2.5rem; /* Space for icon */
      background-color: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      outline: none;
      color: #e0e0e0;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    .input-field::placeholder {
      color: #a0a0a0;
    }

    .input-field:focus {
      border-color: #00e0ff;
      box-shadow: 0 0 0 3px rgba(0, 224, 255, 0.2);
    }
    
    .input-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #808080;
      pointer-events: none;
      transition: color 0.3s;
    }

    .input-group:focus-within .input-icon {
      color: #00e0ff;
    }
    
    .btn {
      width: 100%;
      padding: 0.75rem;
      font-weight: 600;
      border-radius: 8px;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background-color: #00e0ff;
      color: #1a1a2e;
      box-shadow: 0 4px 15px rgba(0, 224, 255, 0.3);
    }

    .btn-primary:hover {
      background-color: #00c2e0;
      box-shadow: 0 6px 20px rgba(0, 224, 255, 0.4);
    }

    .btn-secondary {
      background-color: #5865F2; /* Discord color */
      color: white;
      margin-top: 0.75rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .btn-secondary:hover {
      background-color: #4752c4;
    }
    
    .btn-success {
      background-color: #2ECC71; /* A nice green */
      color: #fff;
      margin-top: 0.75rem;
    }

    .btn-success:hover {
      background-color: #27AE60;
    }

    .toggle-password {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #808080;
      transition: color 0.3s;
    }

    .toggle-password:hover {
      color: #e0e0e0;
    }

  </style>
</head>
<body>

  <div class="login-container">
    <h1 class="text-3xl font-bold mb-6 text-white">Log In</h1>
    
    <div id="errorDiv" class="hidden bg-red-900/70 text-red-100 text-sm px-4 py-2 rounded-md mb-4">
      <p id="errorMessage" class="font-medium"></p>
    </div>

    <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm">
      <input type="hidden" name="type" value="log" />
      <input type="hidden" name="_token" value="<%= JSON.stringify(data) %>" />

      <div class="input-group">
        <i class="fas fa-user input-icon"></i>
        <input type="text" name="growId" id="loginGrowId" placeholder="GrowID" class="input-field" />
      </div>

      <div class="input-group">
        <i class="fas fa-lock input-icon"></i>
        <input type="password" name="password" id="loginPassword" placeholder="Password" class="input-field" />
        <button type="button" id="toggleLogPassword" class="toggle-password">
          <i class="fas fa-eye"></i>
        </button>
      </div>

      <div class="flex items-center justify-between mt-1 mb-6">
        <div class="flex items-center">
          <input type="checkbox" id="rememberMe" class="h-4 w-4 rounded-md border-gray-500 text-cyan-500 bg-white/10" />
          <label for="rememberMe" class="ml-2 text-sm text-gray-400">Remember me</label>
        </div>
        <a href="https://discord.com/invite/BkFVbnK8dS" class="text-sm text-cyan-300 hover:underline">Forgot password?</a>
      </div>

      <button type="button" id="loginButton" class="btn btn-primary">
        <i class="fas fa-sign-in-alt text-sm mr-2"></i> Log In
      </button>
      
      <button type="button" id="registerButton" class="btn btn-success">
        <i class="fas fa-user-plus text-sm mr-2"></i> Register
      </button>

      <a href="https://discord.com/invite/BkFVbnK8dS" target="_blank" class="btn btn-secondary">
        <i class="fab fa-discord text-lg mr-2"></i> Join Discord
      </a>

    </form>
  </div>

  <script>
    // Toggle password visibility
    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const passwordField = document.getElementById('loginPassword');
      const type = passwordField.getAttribute('type');
      passwordField.setAttribute('type', type === 'password' ? 'text' : 'password');
      this.querySelector('i').className = `fas fa-${type === 'password' ? 'eye-slash' : 'eye'}`;
    });

    // Form validation and submission
    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      const uName = document.getElementById('loginGrowId').value.trim();
      const uPass = document.getElementById('loginPassword').value.trim();
      
      const errorDiv = document.getElementById('errorDiv');
      const errorMessage = document.getElementById('errorMessage');

      if (!uName || !uPass) {
        errorMessage.textContent = 'Please enter both a GrowID and password.';
        errorDiv.classList.remove('hidden');
        return;
      }

      if (uName.length < 3 || uPass.length < 4) {
        errorMessage.textContent = 'GrowID must be at least 3 characters and password at least 4.';
        errorDiv.classList.remove('hidden');
        return;
      }
      
      console.log('Login attempt with:', { growId: uName, password: uPass });

      const loginButton = this;
      loginButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Logging in...';
      loginButton.disabled = true;

      setTimeout(() => {
        // Here you would submit the form or make an API call
        // document.getElementById('loginForm').submit();
        
        loginButton.innerHTML = '<i class="fas fa-sign-in-alt text-sm mr-2"></i> Log In';
        loginButton.disabled = false;
        
        errorDiv.classList.add('hidden');
      }, 1500);
    });
    
    // Register button functionality
    document.getElementById('registerButton').addEventListener('click', function() {
      // You can add logic here to redirect the user to a registration page
      // or to display a registration form on the same page.
      alert('Register button clicked!'); 
    });
  </script>
</body>
</html>
